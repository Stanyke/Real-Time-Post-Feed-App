  },
  "homepage": "https://github.com/Stanyke/Real-Time-Chat-App-Using-Node.js-React.js-Socket.js-WebTRC#readme",
  "dependencies": {
    "concurrently": "^6.2.1",
    "cors": "^2.8.5",
    "mongoose": "^6.0.9",
    "nodemon": "^2.0.12",
    "socket.io": "^4.2.0",
